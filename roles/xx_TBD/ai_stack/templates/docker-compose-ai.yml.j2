version: '3.8'

services:
  ollama:
    image: ollama/ollama:latest
    container_name: ollama
    devices:
      - /dev/kfd
      - /dev/dri
    restart: unless-stopped
    ports:
      - "{{ (ports.ai_stack.ollama | default(11434)) }}:11434"
    volumes:
      - "{{ appdata_dir }}/ollama:/root/.ollama"

  open-webui:
    image: ghcr.io/open-webui/open-webui:main
    container_name: open-webui
    restart: unless-stopped
    ports:
      - "{{ (ports.ai_stack.openwebui | default(8080)) }}:8080"
    environment:
      - OLLAMA_BASE_URL=http://ollama:11434
    depends_on:
      - ollama

networks:
  proxy:
    external: true