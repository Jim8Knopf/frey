version: '3.8'

services:
  filebrowser:
    image: filebrowser/filebrowser:latest
    container_name: filebrowser
    restart: unless-stopped
    ports:
      - "{{ filebrowser_port }}:80"
    volumes:
      - "{{ base_dir }}:/srv"
      - "{{storage.appdata_dir }}/filebrowser/database:/database"
      - "{{storage.appdata_dir }}/filebrowser/config:/config"
    environment:
      - FB_DATABASE=/database/filebrowser.db
      - FB_CONFIG_FILE=/config/settings.json
    networks:
      file_management_network:
      localdns:

  code-server:
    image: codercom/code-server:latest
    container_name: code-server
    restart: unless-stopped
    ports:
      - "{{ code_server_port }}:8080"
    volumes:
      - "{{ base_dir }}:/home/coder/project"
      - "{{storage.appdata_dir }}/code-server:/home/coder/.local/share/code-server"
    environment:
      - PASSWORD={{ default_code_server_password | default('codeserver123') }}
      - SUDO_PASSWORD={{ default_code_server_password | default('codeserver123') }}
    networks:
      file_management_network:
      localdns:
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.code-server.rule=Host(`code-server.{{ domain_name }}`)"
      - "traefik.http.routers.code-server.entrypoints=web"
      - "traefik.http.services.code-server.loadbalancer.server.port=8443"

# Add network definitions at the end
networks:
  file_management_network:
    name: file_management_network
    ipam:
      config:
        - subnet: 10.20.6.0/24
  localdns:
    external: true