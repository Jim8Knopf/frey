# ==============================================================================
# WICD MANAGER CONFIGURATION - WiFi Network Manager
# ==============================================================================
# Configures wicd to only manage wlan0 for connecting to public WiFi
# while leaving wlan1 alone for the FreyHub Access Point
#
# SAFETY:
# - wireless_interface set to wlan0 only
# - wlan1 ({{ network.wifi.interface }}) is never touched
# - Compatible with hostapd and dnsmasq on wlan1
# ==============================================================================

[Settings]
# Only manage wlan0 for WiFi connections
wireless_interface = wlan0

# Wired interface (optional)
wired_interface = eth0

# Backend for privilege escalation
backend = external
sudo_app = sudo

# Interface display settings
always_show_wired_interface = False

# DNS settings
use_global_dns = False

# Auto-reconnect to known networks
auto_reconnect = True

# Disable debug mode for cleaner output
debug_mode = False

# Don't show notifications (headless server)
show_never_connect = False

# Prefer wireless over wired (for our use case)
prefer_wired = False
