# Static IP configuration for WiFi AP interface
# Generated by Ansible

# Configuration for AP interface
interface {{ wifi_ap_interface }}
static ip_address={{ wifi_ap_ip }}/24
nohook wpa_supplicant

# Keep DHCP client active on the internet-facing interface
interface {{ wifi_client_interface }}
request dhcp_server_identifier
require dhcp_server_identifier
slaac private

# Allow other wireless interfaces to use DHCP
denyinterfaces {{ wifi_ap_interface }}