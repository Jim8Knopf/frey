# WiFi Access Point Configuration
ctrl_interface=/var/run/hostapd
ctrl_interface_group=0

# Interface configuration
interface={{ wifi_ap_interface }}
driver=nl80211

# Basic WiFi settings
ssid={{ wifi_ap_ssid }}
country_code={{ wifi_ap_country }}
hw_mode={{ wifi_ap_hw_mode }}
channel={{ wifi_ap_channel | default(6) }}

# Security settings
macaddr_acl={{ wifi_ap_macaddr_acl }}
auth_algs={{ wifi_ap_auth_algs }}
ignore_broadcast_ssid={{ wifi_ap_ignore_broadcast_ssid }}
wpa=2
wpa_passphrase={{ wifi_ap_password }}
wpa_key_mgmt=WPA-PSK
wpa_pairwise=CCMP
rsn_pairwise=CCMP

# Performance features
ieee80211n={{ wifi_ap_ieee80211n }}
wmm_enabled={{ wifi_ap_wmm_enabled }}

# No AP isolation
ap_isolate=0

# Regulatory settings
ieee80211d=1
ieee80211h=1

# Logging
logger_syslog=-1
logger_stdout=-1
logger_stdout_level=2
