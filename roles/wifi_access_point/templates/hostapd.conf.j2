# WiFi Access Point Configuration
ctrl_interface=/var/run/hostapd
ctrl_interface_group=0

# Interface configuration
interface={{ wifi.interface }}
driver=nl80211

# Basic WiFi settings
ssid={{ wifi.ssid }}
country_code={{ wifi.country }}
hw_mode={{ wifi.hw_mode }}
channel={{ wifi.channel | default(6) }}

# Security settings
macaddr_acl={{ wifi.macaddr_acl }}
auth_algs={{ wifi.auth_algs }}
ignore_broadcast_ssid={{ wifi.ignore_broadcast_ssid }}
wpa=2
wpa_passphrase={{ wifi.password }}
wpa_key_mgmt=WPA-PSK
wpa_pairwise=CCMP
rsn_pairwise=CCMP

# Performance features
ieee80211n={{ wifi.ieee80211n }}
wmm_enabled={{ wifi.wmm_enabled }}

# No AP isolation
ap_isolate=0

# Regulatory settings
ieee80211d=1
ieee80211h=1

# Logging
logger_syslog=-1
logger_stdout=-1
logger_stdout_level=2
