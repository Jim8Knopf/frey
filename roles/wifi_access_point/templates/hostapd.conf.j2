# WiFi Access Point Configuration
ctrl_interface=/var/run/hostapd
ctrl_interface_group=0

# Interface configuration
interface={{ wifi_ap_interface }}
driver=nl80211

# Basic WiFi settings
ssid={{ wifi_ap_ssid }}
country_code={{ wifi_ap_country }}
hw_mode=g
channel={{ wifi_ap_channel | default(6) }}

# Security settings
macaddr_acl=0
auth_algs=1
ignore_broadcast_ssid=0
wpa=2
wpa_passphrase={{ wifi_ap_password }}
wpa_key_mgmt=WPA-PSK
wpa_pairwise=CCMP
rsn_pairwise=CCMP

# Performance features
ieee80211n=1
wmm_enabled=1
ht_capab=[HT40][SHORT-GI-20][DSSS_CCK-40]

# Regulatory settings
ieee80211d=1
ieee80211h=1

# Logging
logger_syslog=-1
logger_stdout=-1
logger_stdout_level=2
