server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://loki:3100/loki/api/v1/push

scrape_configs:
  # System logs
  - job_name: system
    static_configs:
      - targets: ['localhost']
        labels:
          job: system_logs
          host: frey-pi5
          __path__: /var/log/*log

  # Docker container logs with dynamic labels and automatic service discovery
  - job_name: docker
    docker_sd_configs:
      - host: unix:///var/run/docker.sock
        refresh_interval: 30s
        filters:
          - name: status
            values: [running]
    relabel_configs:
      # Container name (strip leading slash)
      - source_labels: ['__meta_docker_container_name']
        target_label: 'container_name'
        regex: '/(.*)'
        replacement: '${1}'
      # Container image
      - source_labels: ['__meta_docker_container_image']
        target_label: 'image'
      # Compose project
      - source_labels: ['__meta_docker_container_label_com_docker_compose_project']
        target_label: 'compose_project'
      # Compose service
      - source_labels: ['__meta_docker_container_label_com_docker_compose_service']
        target_label: 'compose_service'
      # Log stream (stdout/stderr)
      - source_labels: ['__meta_docker_container_log_stream']
        target_label: 'stream'
      # Container ID (shortened)
      - source_labels: ['__meta_docker_container_id']
        target_label: 'container_id'
        regex: '(.{12}).*'
        replacement: '${1}'
    pipeline_stages:
      # Parse JSON logs (if applicable)
      - json:
          expressions:
            level: level
            msg: message
            timestamp: timestamp
      # Extract log level from common patterns (ERROR, WARN, INFO, DEBUG)
      - regex:
          expression: '.*(?P<level>(ERROR|WARN|WARNING|INFO|DEBUG|FATAL|CRITICAL)).*'
      # Label extracted log levels for filtering
      - labels:
          level:
      # Parse timestamps from logs
      - timestamp:
          source: timestamp
          format: RFC3339
      # Drop debug logs older than 1 hour to save space (optional optimization)
      - match:
          selector: '{level="DEBUG"}'
          stages:
            - drop:
                expression: '.*'
                older_than: 1h
