auth_enabled: false

server:
  http_listen_port: 3100

ingester:
  wal:
    enabled: true
  lifecycler:
    ring:
      kvstore:
        store: inmemory

storage_config:
  boltdb_shipper:
    active_index_directory: /loki/index
    shared_store: filesystem
  filesystem:
    directory: /loki/chunks

schema_config:
  configs:
    - from: 2020-10-15
      store: boltdb-shipper
      object_store: filesystem
      schema: v11
      index:
        prefix: index_
        period: 24h

limits_config:
  enforce_metric_name: false
  max_streams_per_user: 10000
