{
  "uid": "frey-traefik",
  "title": "Traefik - Frey",
  "tags": ["frey", "traefik"],
  "schemaVersion": 37,
  "version": 1,
  "timezone": "browser",
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "text": "prometheus",
          "value": "prometheus",
          "selected": true
        }
      },
      {
        "name": "service",
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "definition": "label_values(traefik_service_requests_total, service)",
        "query": "label_values(traefik_service_requests_total, service)",
        "multi": true,
        "includeAll": true,
        "current": {
          "text": "All",
          "value": "$__all",
          "selected": true
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "HTTP Requests/s",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(traefik_service_requests_total{service=~\"$service\"}[5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "HTTP 5xx/s",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(traefik_service_requests_total{code=~\"5..\", service=~\"$service\"}[5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Request Rate by Service",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum by (service) (rate(traefik_service_requests_total{service=~\"$service\"}[5m]))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "HTTP Error Rate (4xx/5xx)",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum by (code) (rate(traefik_service_requests_total{code=~\"4..|5..\", service=~\"$service\"}[5m]))",
          "legendFormat": "{{code}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Latency p99 (s)",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(traefik_service_request_duration_seconds_bucket{service=~\"$service\"}[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Open Connections",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum by (service) (traefik_service_server_open_connections{service=~\"$service\"})",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ]
    }
  ]
}
