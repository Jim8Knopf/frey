# yaml-language-server: $schema=https://goauthentik.io/blueprints/schema.json
version: 1
metadata:
  name: Frey Hub - Immich OIDC Provider
  labels:
    blueprints.goauthentik.io/instantiate: "true"

entries:
  # OAuth2 Provider for Immich
  - model: authentik_providers_oauth2.oauth2provider
    id: immich-provider
    identifiers:
      name: immich-provider
    attrs:
      name: immich-provider
      authentication_flow: !Find [authentik_flows.flow, [slug, default-authentication-flow]]
      authorization_flow: !Find [authentik_flows.flow, [slug, default-provider-authorization-implicit-consent]]
      client_type: confidential
      client_id: {{ immich.services.immich.oidc_client_id | default('immich') }}
      client_secret: {{ immich_oidc_client_secret }}
      redirect_uris:
        # DNS-based redirects - HTTPS (Traefik serves with TLS)
        - matching_mode: strict
          url: https://immich.{{ network.domain_name }}/auth/login
        - matching_mode: strict
          url: https://immich.{{ network.domain_name }}/user-settings
        # DNS-based redirects - HTTP fallback
        - matching_mode: strict
          url: http://immich.{{ network.domain_name }}/auth/login
        - matching_mode: strict
          url: http://immich.{{ network.domain_name }}/user-settings
        # LAN IP redirects - HTTPS
        - matching_mode: strict
          url: https://{{ network.wifi.client_interface_ip }}:{{ immich.services.immich.port | default(2283) }}/auth/login
        - matching_mode: strict
          url: https://{{ network.wifi.client_interface_ip }}:{{ immich.services.immich.port | default(2283) }}/user-settings
        # LAN IP redirects - HTTP fallback
        - matching_mode: strict
          url: http://{{ network.wifi.client_interface_ip }}:{{ immich.services.immich.port | default(2283) }}/auth/login
        - matching_mode: strict
          url: http://{{ network.wifi.client_interface_ip }}:{{ immich.services.immich.port | default(2283) }}/user-settings
        # WiFi AP IP redirects - HTTP only (local network)
        - matching_mode: strict
          url: http://{{ network.wifi.ip }}:{{ immich.services.immich.port | default(2283) }}/auth/login
        - matching_mode: strict
          url: http://{{ network.wifi.ip }}:{{ immich.services.immich.port | default(2283) }}/user-settings
        # Mobile app redirect - CORRECTED FORMAT
        - matching_mode: strict
          url: app.immich:///oauth-callback
      signing_key: !Find [authentik_crypto.certificatekeypair, [name, "authentik Self-signed Certificate"]]
      invalidation_flow: !Find [authentik_flows.flow, [slug, default-invalidation-flow]]
      access_code_validity: minutes=1
      access_token_validity: minutes=10
      refresh_token_validity: days=30
      property_mappings:
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, openid]]
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, email]]
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, profile]]
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, groups]]
      include_claims_in_id_token: true

  # Application for Immich
  - model: authentik_core.application
    identifiers:
      slug: immich
    attrs:
      name: Immich
      slug: immich
      provider: !KeyOf immich-provider
      policy_engine_mode: any
      meta_launch_url: http://immich.{{ network.domain_name }}
      meta_description: Photo management and backup application
      meta_publisher: Frey Hub
