# yaml-language-server: $schema=https://goauthentik.io/blueprints/schema.json
version: 1
metadata:
  name: Frey Hub - Audiobookshelf OIDC Provider
  labels:
    blueprints.goauthentik.io/instantiate: "true"

entries:
  # OAuth2 Provider for Audiobookshelf
  - model: authentik_providers_oauth2.oauth2provider
    id: audiobookshelf-provider
    identifiers:
      name: audiobookshelf-provider
    attrs:
      name: audiobookshelf-provider
      authentication_flow: !Find [authentik_flows.flow, [slug, default-authentication-flow]]
      authorization_flow: !Find [authentik_flows.flow, [slug, default-provider-authorization-implicit-consent]]
      client_type: confidential
      client_id: {{ media.services.audiobookshelf.oidc_client_id | default('audiobookshelf') }}
      client_secret: {{ audiobookshelf_oidc_client_secret }}
      redirect_uris:
        # DNS-based redirects - HTTPS (primary, works with Step-CA certificates)
        - matching_mode: strict
          url: https://audiobookshelf.{{ network.domain_name }}/auth/openid/callback
        - matching_mode: strict
          url: https://audiobookshelf.{{ network.domain_name }}/auth/openid/mobile-redirect
        # DNS-based redirects - HTTP (fallback)
        - matching_mode: strict
          url: http://audiobookshelf.{{ network.domain_name }}/auth/openid/callback
        - matching_mode: strict
          url: http://audiobookshelf.{{ network.domain_name }}/auth/openid/mobile-redirect
        # LAN IP redirects - HTTPS (client_interface_ip - accessible from LAN)
        - matching_mode: strict
          url: https://{{ network.wifi.client_interface_ip }}:13378/auth/openid/callback
        - matching_mode: strict
          url: https://{{ network.wifi.client_interface_ip }}:13378/auth/openid/mobile-redirect
        # LAN IP redirects - HTTP (fallback)
        - matching_mode: strict
          url: http://{{ network.wifi.client_interface_ip }}:13378/auth/openid/callback
        - matching_mode: strict
          url: http://{{ network.wifi.client_interface_ip }}:13378/auth/openid/mobile-redirect
        # WiFi AP IP redirects - HTTPS (works from WiFi clients)
        - matching_mode: strict
          url: https://{{ network.wifi.ip }}:13378/auth/openid/callback
        - matching_mode: strict
          url: https://{{ network.wifi.ip }}:13378/auth/openid/mobile-redirect
        # WiFi AP IP redirects - HTTP (fallback)
        - matching_mode: strict
          url: http://{{ network.wifi.ip }}:13378/auth/openid/callback
        - matching_mode: strict
          url: http://{{ network.wifi.ip }}:13378/auth/openid/mobile-redirect
      signing_key: !Find [authentik_crypto.certificatekeypair, [name, "authentik Self-signed Certificate"]]
      invalidation_flow: !Find [authentik_flows.flow, [slug, default-invalidation-flow]]
      access_code_validity: minutes=1
      access_token_validity: minutes=10
      refresh_token_validity: days=30
      property_mappings:
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, openid]]
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, email]]
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, profile]]
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, groups]]
        include_claims_in_id_token: true

  # Application for Audiobookshelf
  - model: authentik_core.application
    identifiers:
      slug: audiobookshelf
    attrs:
      name: Audiobookshelf
      slug: audiobookshelf
      provider: !KeyOf audiobookshelf-provider
      policy_engine_mode: any
      meta_launch_url: http://audiobookshelf.{{ network.domain_name }}
      meta_description: Audiobook and podcast server
      meta_publisher: Frey Hub

# comment: End of file
