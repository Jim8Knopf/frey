# yaml-language-server: $schema=https://goauthentik.io/blueprints/schema.json
version: 1
metadata:
  name: Frey Hub - Mealie OIDC Provider
  labels:
    blueprints.goauthentik.io/instantiate: "true"

entries:
  # OAuth2 Provider for Mealie
  - model: authentik_providers_oauth2.oauth2provider
    id: mealie-provider
    identifiers:
      name: mealie-provider
    attrs:
      name: mealie-provider
      authentication_flow: !Find [authentik_flows.flow, [slug, default-authentication-flow]]
      authorization_flow: !Find [authentik_flows.flow, [slug, default-provider-authorization-implicit-consent]]
      client_type: confidential
      client_id: {{ cookbook.services.mealie.oidc_client_id | default('mealie') }}
      client_secret: {{ mealie_oidc_client_secret }}
      redirect_uris:
        # DNS-based redirects (works when DNS resolves)
        - matching_mode: strict
          url: https://cookbook.{{ network.domain_name }}/login
        - matching_mode: strict
          url: https://cookbook.{{ network.domain_name }}/login?direct=1
        - matching_mode: strict
          url: https://cookbook.{{ network.domain_name }}/login/callback
        # HTTP fallback (pre-TLS or troubleshooting)
        - matching_mode: strict
          url: http://cookbook.{{ network.domain_name }}/login
        - matching_mode: strict
          url: http://cookbook.{{ network.domain_name }}/login?direct=1
        - matching_mode: strict
          url: http://cookbook.{{ network.domain_name }}/login/callback
        # LAN IP redirects (client_interface_ip - accessible from LAN)
        - matching_mode: strict
          url: http://{{ network.wifi.client_interface_ip }}:{{ cookbook.services.mealie.port }}/login
        - matching_mode: strict
          url: http://{{ network.wifi.client_interface_ip }}:{{ cookbook.services.mealie.port }}/login?direct=1
        - matching_mode: strict
          url: http://{{ network.wifi.client_interface_ip }}:{{ cookbook.services.mealie.port }}/login/callback
        # WiFi AP IP redirects (works from WiFi clients)
        - matching_mode: strict
          url: http://{{ network.wifi.ip }}:{{ cookbook.services.mealie.port }}/login
        - matching_mode: strict
          url: http://{{ network.wifi.ip }}:{{ cookbook.services.mealie.port }}/login?direct=1
        - matching_mode: strict
          url: http://{{ network.wifi.ip }}:{{ cookbook.services.mealie.port }}/login/callback
      signing_key: !Find [authentik_crypto.certificatekeypair, [name, "authentik Self-signed Certificate"]]
      invalidation_flow: !Find [authentik_flows.flow, [slug, default-invalidation-flow]]
      access_code_validity: minutes=1
      access_token_validity: minutes=60
      refresh_token_validity: days=30
      property_mappings:
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, openid]]
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, email]]
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, profile]]
        - !Find [authentik_providers_oauth2.scopemapping, [scope_name, "goauthentik.io/providers/oauth2/scopes/groups"]]
      include_claims_in_id_token: true

  # Application for Mealie
  - model: authentik_core.application
    identifiers:
      slug: mealie
    attrs:
      name: Mealie
      slug: mealie
      provider: !KeyOf mealie-provider
      policy_engine_mode: any
      meta_launch_url: https://cookbook.{{ network.domain_name }}
      meta_description: Recipe manager and meal planner
      meta_publisher: Frey Hub
