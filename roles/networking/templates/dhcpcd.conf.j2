# dhcpcd static config for AP interface
# Generated by Ansible template

# Prevent dhcpcd from using wpa_supplicant on the AP interface
nohook wpa_supplicant

interface {{ ap_interface | default('wlan0') }}
# CIDR IP (address/prefix)
static ip_address={{ ap_ip | default('192.168.4.1/24') }}
# If you need a gateway for the AP network, set ap_gateway; otherwise leave blank
{% if ap_gateway is defined and ap_gateway %}
static routers={{ ap_gateway }}
{% endif %}
# DNS server(s) for clients â€” typically the local DNS (e.g. AdGuard) or public DNS
static domain_name_servers={{ ap_dns | default('127.0.0.1') }}