# ==============================================================================
# BLUETOOTH DEVICE PRIORITY CONFIGURATION
# ==============================================================================
# Location: /etc/frey/bluetooth/device-priority.conf
# Purpose: Define priority for automatic connection to Bluetooth devices
#
# Format: NAME|MAC_ADDRESS|PRIORITY|PROFILES
# - NAME: Human-readable device name
# - MAC_ADDRESS: Bluetooth MAC address (e.g., AA:BB:CC:DD:EE:FF)
# - PRIORITY: 0-100 (higher = more preferred)
# - PROFILES: Comma-separated list of profiles (a2dp_sink, hsp_hs, hfp_hf)
#
# Profiles:
#   - a2dp_sink: High-quality audio output (A2DP)
#   - hsp_hs: Headset with microphone (basic quality)
#   - hfp_hf: Hands-free with microphone (better quality than HSP)
#
# Generated by Ansible bluetooth_audio role
# Devices are added by frey-bluetooth-pair script
# ==============================================================================

{% if bluetooth_audio.devices is defined and bluetooth_audio.devices | length > 0 %}
{% for device in bluetooth_audio.devices %}
{{ device.name }}|{{ device.mac_address }}|{{ device.priority }}|{{ device.profiles | join(',') }}
{% endfor %}
{% else %}
# No devices configured yet
# Run: sudo frey-bluetooth-pair
{% endif %}

# ==============================================================================
# PRIORITY GUIDE
# ==============================================================================
# 100 - Primary device (headphones, main headset)
# 90  - Secondary device (backup headphones)
# 80  - Tertiary device (work headset)
# 50  - Car audio systems
# 30  - Portable speakers
# 10  - Fallback devices
# ==============================================================================
