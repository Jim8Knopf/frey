# ==============================================================================
# MEALIE COOKBOOK - Docker Compose Configuration
# ==============================================================================
# Recipe manager with API access, meal planning, and SSO support
#
# FEATURES:
# - Recipe management with scraping from URLs
# - Meal planning (weekly calendar)
# - Shopping list generation
# - Full REST API with OpenAPI docs
# - n8n integration ready
# - SSO support (OIDC/LDAP)
#
# ACCESS:
# - Web UI: http://cookbook.{{ network.domain_name }}
# - API Docs: http://cookbook.{{ network.domain_name }}/docs
# - Direct: http://{{ network.wifi.ip }}:{{ cookbook.services.mealie.port }}
# ==============================================================================

name: cookbook

services:
  # ==============================================================================
  # MEALIE - Recipe Manager & Meal Planner
  # ==============================================================================
  mealie:
    container_name: mealie
    image: ghcr.io/mealie-recipes/mealie:{{ cookbook.services.mealie.version | default('latest') }}
    restart: unless-stopped
    env_file:
      - .env
    volumes:
      - "{{ cookbook.services.mealie.data_dir }}:/app/data"
      # Trust Step-CA root for outbound TLS to Authentik (OIDC discovery)
      - "{{ storage.appdata_dir }}/step-ca/certs/root_ca.crt:/etc/ssl/certs/step-ca.crt:ro"
    environment:
      # Ensure Python requests trusts Step-CA when calling https://auth.frey
      - REQUESTS_CA_BUNDLE=/etc/ssl/certs/step-ca.crt
      # Force OpenSSL-based stacks (httpx, authlib) to trust Step-CA as well
      - SSL_CERT_FILE=/etc/ssl/certs/step-ca.crt
      - SSL_CERT_DIR=/etc/ssl/certs
{% if infrastructure.services.shared_postgres.enabled | default(false) %}
    # When using shared PostgreSQL, no local dependency
{% else %}
    depends_on:
      - mealie-postgres
{% endif %}
    ports: {{ cookbook.services.mealie.ports | default(['9900:9000']) }}
    networks:
      - cookbook
      - proxy
      - localdns
{% if infrastructure.services.shared_postgres.enabled | default(false) %}
      - infrastructure_network  # For access to shared PostgreSQL
{% endif %}
    labels:
      # Traefik routing configuration
      - "traefik.enable=true"
      - "traefik.docker.network=proxy"
      - "traefik.http.routers.cookbook.rule=Host(`cookbook.{{ network.domain_name }}`)"
      - "traefik.http.routers.cookbook.entrypoints=websecure"
      - "traefik.http.routers.cookbook.tls=true"
      - "traefik.http.routers.cookbook.tls.certresolver=step-ca"
      - "traefik.http.routers.cookbook-http.rule=Host(`cookbook.{{ network.domain_name }}`)"
      - "traefik.http.routers.cookbook-http.entrypoints=web"
      - "traefik.http.middlewares.cookbook-redirect.redirectscheme.scheme=https"
      - "traefik.http.routers.cookbook-http.middlewares=cookbook-redirect"
      - "traefik.http.services.cookbook.loadbalancer.server.port=9000"
    # Healthcheck disabled - curl not available in container
    # Container health can be monitored via logs and direct API access

{% if not (infrastructure.services.shared_postgres.enabled | default(false)) %}
  # ==============================================================================
  # POSTGRESQL DATABASE - Mealie Data (Standalone)
  # ==============================================================================
  # NOTE: This service is only used when shared PostgreSQL is disabled
  mealie-postgres:
    container_name: mealie_postgres
    image: postgres:15-alpine
    restart: unless-stopped
    environment:
      POSTGRES_USER: ${DB_USER}
      POSTGRES_PASSWORD: ${DB_PASSWORD}
      POSTGRES_DB: ${DB_NAME}
    volumes:
      - "{{ cookbook.services.mealie.db_data_location }}:/var/lib/postgresql/data"
    networks:
      - cookbook
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${DB_USER}"]
      interval: 10s
      timeout: 5s
      retries: 5
{% endif %}

networks:
  cookbook:
    name: cookbook_network
    driver: bridge
  proxy:
    external: true
  localdns:
    external: true
{% if infrastructure.services.shared_postgres.enabled | default(false) %}
  infrastructure_network:  # For access to shared PostgreSQL
    external: true
{% endif %}
