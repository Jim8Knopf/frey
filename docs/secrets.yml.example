# ===================================================================
# SECRETS TEMPLATE FOR FREY PROJECT
# ===================================================================
# This file provides an example of the secrets needed for the Frey project.
# Copy this to group_vars/all/secrets.yml and encrypt with ansible-vault:
#
#   ansible-vault create group_vars/all/secrets.yml
#   ansible-vault edit group_vars/all/secrets.yml
#
# Store the vault password in .vault_pass (already gitignored)
# ===================================================================

# ==============================================================================
# WIFI ACCESS POINT
# ==============================================================================
wifi_ap:
  password: "YourSecureWiFiPasswordHere"  # WPA2 password for FreyHub network

  # Known networks for roaming (optional)
  known_networks:
    - ssid: "HomeNetwork"
      password: "home_wifi_password"
      priority: 100
    - ssid: "CoffeeShopWiFi"
      password: "cafe_password"
      priority: 50

# ==============================================================================
# MEDIA STACK API KEYS
# ==============================================================================
# Get these from each service's web UI: Settings → General → Security → API Key

# Sonarr API Key (http://sonarr.frey → Settings → General → API Key)
sonarr_api_key: "your-sonarr-api-key-here-32-characters-long"

# Radarr API Key (http://radarr.frey → Settings → General → API Key)
radarr_api_key: "your-radarr-api-key-here-32-characters-long"

# Lidarr API Key (http://lidarr.frey → Settings → General → API Key)
lidarr_api_key: "your-lidarr-api-key-here-32-characters-long"

# Prowlarr API Key (http://prowlarr.frey → Settings → General → API Key)
prowlarr_api_key: "your-prowlarr-api-key-here-32-characters-long"

# Bazarr API Key (http://bazarr.frey → Settings → General → API Key)
bazarr_api_key: "your-bazarr-api-key-here-32-characters-long"

# Jellyfin API Token (Dashboard → API Keys → Create new key)
jellyfin_api_token: "your-jellyfin-api-token-here"

# Audiobookshelf API Token (Settings → Users → [Your User] → Tokens)
audiobookshelf_api_token: "your-audiobookshelf-api-token-here"

# ==============================================================================
# AUTHENTICATION & SSO
# ==============================================================================
# Authentik OIDC Client Secrets
# Get from Authentik: Applications → [Application] → Provider → Client Secret

# Grafana OIDC
grafana_oidc_client_secret: "your-grafana-oidc-client-secret"

# Audiobookshelf OIDC
audiobookshelf_oidc_client_secret: "your-audiobookshelf-oidc-secret"

# Immich OIDC
immich_oidc_client_secret: "your-immich-oidc-client-secret"

# Home Assistant OIDC
homeassistant_oidc_client_secret: "your-homeassistant-oidc-secret"

# Mealie OIDC
mealie_oidc_client_secret: "your-mealie-oidc-client-secret"

# Jellyfin LDAP Bind Password
jellyfin_ldap_bind_password: "your-jellyfin-ldap-bind-password"

# ==============================================================================
# DATABASE PASSWORDS
# ==============================================================================
# PostgreSQL database passwords for various services

# Authentik Database
authentik_db_password: "your-secure-authentik-db-password"

# Mealie Database
mealie_db_password: "your-secure-mealie-db-password"

# ==============================================================================
# NOTIFICATION SERVICES (Optional)
# ==============================================================================
# Ntfy.sh topic for system notifications
ntfy_topic: "frey-notifications-random-token-here"

# Discord webhook for alerts (optional)
discord_webhook_url: "https://discord.com/api/webhooks/..."

# Telegram bot token and chat ID (optional)
telegram_bot_token: "bot123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11"
telegram_chat_id: "123456789"

# ==============================================================================
# BACKUP & STORAGE (Optional)
# ==============================================================================
# Rclone configuration for remote backups
rclone_config: |
  [backblaze]
  type = b2
  account = your_account_id
  key = your_application_key

# Restic backup password
restic_password: "your-secure-restic-backup-password"

# ==============================================================================
# VPN CONFIGURATION (If using VPN for downloads)
# ==============================================================================
vpn_provider: "mullvad"  # or "nordvpn", "pia", etc.
vpn_username: "your-vpn-username"
vpn_password: "your-vpn-password"
vpn_country: "Sweden"
vpn_city: "Stockholm"

# ==============================================================================
# NOTES
# ==============================================================================
#
# How to get API keys:
#
# 1. Deploy the media stack without optimization services first
# 2. Access each service's web UI
# 3. Navigate to Settings → General → Security or API Keys
# 4. Copy the API key
# 5. Add to this file and encrypt with ansible-vault
# 6. Re-deploy to enable optimization services
#
# Encryption commands:
#   ansible-vault create group_vars/all/secrets.yml
#   ansible-vault edit group_vars/all/secrets.yml
#   ansible-vault decrypt group_vars/all/secrets.yml  # Temporary decrypt
#   ansible-vault encrypt group_vars/all/secrets.yml  # Re-encrypt
#
# Store vault password in: .vault_pass (already in .gitignore)
