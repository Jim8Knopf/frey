# Pi5 Hub Environment Variables
# Generated by Ansible

# Domain Configuration
DOMAIN={{ network.domain_name }}
INTERNAL_NETWORK={{ network.internal_network }}

# Data Paths
DATA_ROOT={{ docker.data_root }}
SSD_MOUNT={{ storage.ssd_mount_point }}

# Service Ports
TRAEFIK_WEB_PORT={{ ports.infrastructure.traefik_web }}
TRAEFIK_WEBSECURE_PORT={{ ports.infrastructure.traefik_websecure }}
TRAEFIK_DASHBOARD_PORT={{ ports.infrastructure.traefik_dashboard }}

JELLYFIN_PORT={{ media.services.jellyfin.port }}
SONARR_PORT={{ media.services.sonarr.port }}
RADARR_PORT={{ media.services.radarr.port }}

OLLAMA_PORT={{ ports.ai_stack.ollama }}
OPENWEBUI_PORT={{ ports.ai_stack.openwebui }}

PROMETHEUS_PORT={{ ports.monitoring.prometheus }}
GRAFANA_PORT={{ ports.monitoring.grafana }}

HOMEASSISTANT_PORT={{ ports.photos_home.homeassistant }}
IMMICH_PORT={{ ports.photos_home.immich }}

FILEBROWSER_PORT={{ ports.file_management.filebrowser }}
CODE_SERVER_PORT={{ ports.file_management.code_server }}

# User Configuration
PUID={{ user.uid }}
PGID={{ user.gid }}
TZ={{ network.timezone }}

# Backup Configuration
BACKUP_ENABLED={{ automation.backup.enabled | lower }}
BACKUP_LOCATION={{ automation.backup.location }}
BACKUP_RETENTION={{ automation.backup.retention_days }}
